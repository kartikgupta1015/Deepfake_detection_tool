{
    "manifest_version": 3,
    "name": "DeepShield â€” Deepfake Detector",
    "version": "1.0.0",
    "description": "Real-time deepfake detection for images, videos, and audio on any website.",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "https://deepshieldbackend-production.up.railway.app/*",
        "http://localhost:8000/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "DeepShield",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}